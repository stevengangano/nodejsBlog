<% include partials/header %>
	<div class="panel panel-default">
		  <div class="panel-heading text-center">Create a blog</div>
				<div class='text-center'>
					<form action='/blog' method='Post'> <!-- posting to index page -->
						<div class='field'>
							<label> Title </label><br>
							<input type='text' name='title' placeholder='blog name'> <!-- "[]" must match Schema -->
						</div>
						<div class='field'>
							<label> Image </label> <br>
							<input type='text' name='image' placeholder='img url'> 
						</div>
						<div class='field'>
							<label> Body </label> <br>
							<textarea name='body'> </textarea>
						</div>
						<button class='btn btn-primary'> Submit </button>
					</form>
				</div>
		</div>
	</div>
